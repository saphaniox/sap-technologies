# Database Configuration
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your_very_secure_session_secret_key_here

# Environment
# Options: development, production, test
NODE_ENV=development

# CORS Configuration
# Add your domain(s) separated by commas
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Server Configuration
# Port number (optional, most platforms set this automatically)
PORT=3000

# Security Configuration
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# File Upload Configuration
# Maximum file size in bytes (2MB = 2097152)
MAX_FILE_SIZE=2097152

# Email Configuration (if you add email features later)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password 